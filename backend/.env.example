# AI Babysitter Backend - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ===========================================
# NVIDIA Nemotron API (REQUIRED)
# ===========================================
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=llama-3.3-nemotron-super-49b-v1.5

# ===========================================
# NVIDIA Cosmos Vision (Recommended)
# ===========================================
NVIDIA_COSMOS_ENABLED=True
NVIDIA_COSMOS_MODEL=nvidia/cosmos-reason1-7b
NVIDIA_COSMOS_BASE_URL=https://integrate.api.nvidia.com/v1

# ===========================================
# OpenAI API (Optional - for Whisper STT and GPT-4V)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Anthropic API (Optional - for Claude Vision)
# ===========================================
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# ElevenLabs API (Optional - for premium TTS)
# ===========================================
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=sqlite:///./babysitter.db

# ===========================================
# Redis (Optional - for task queue)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Security
# ===========================================
SECRET_KEY=change-this-to-random-secret-key-in-production
ALGORITHM=HS256

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ===========================================
# Safety Settings
# ===========================================
MAX_SESSION_DURATION_HOURS=8
# ALERT_WEBHOOK_URL=https://your-webhook.com/alerts

# ===========================================
# LLM Parameters
# ===========================================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ===========================================
# File Upload Limits
# ===========================================
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_DURATION_SECONDS=300
