# AI Babysitter System - Environment Configuration

# ===========================================
# NVIDIA Nemotron API
# ===========================================
# Get your key from: https://build.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_MODEL=llama-3.3-nemotron-super-49b-v1.5

# ===========================================
# Vision API (choose one or multiple)
# ===========================================
# Option 1: NVIDIA Cosmos Reason1 7B (recommended, uses same NVIDIA_API_KEY)
# Get your key from: https://build.nvidia.com/nvidia/cosmos-reason1-7b
NVIDIA_COSMOS_ENABLED=True
NVIDIA_COSMOS_MODEL=nvidia/cosmos-reason1-7b
NVIDIA_COSMOS_BASE_URL=https://integrate.api.nvidia.com/v1

# Option 2: OpenAI GPT-4 Vision
# OPENAI_API_KEY=your_openai_api_key_here

# Option 3: Anthropic Claude with Vision
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# Voice Services
# ===========================================
# Option 1: ElevenLabs (high quality, paid)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Option 2: Use free/open-source alternatives
# (Coqui TTS, gTTS - no API key needed)
VOICE_SERVICE=elevenlabs  # or 'coqui', 'gtts'

# ===========================================
# Database Configuration
# ===========================================
# Development (SQLite)
DATABASE_URL=sqlite:///./data/babysitter.db

# Production (PostgreSQL - uncomment for prod)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/babysitter

# ===========================================
# PostgreSQL Settings (for production)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=babysitter

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# Application Settings
# ===========================================
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=change-this-to-random-secret-key-in-production

# ===========================================
# CORS Settings
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# ===========================================
# Safety & Moderation
# ===========================================
ENABLE_CONTENT_MODERATION=True
ALERT_WEBHOOK_URL=  # Optional: Webhook for urgent alerts

# ===========================================
# Feature Flags
# ===========================================
ENABLE_VOICE=True
ENABLE_VISION=True
ENABLE_PARENT_ALERTS=True
